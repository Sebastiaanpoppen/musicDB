<div class="container">
  <h1><%= @chat_room.title %></h1>

  <div class="chatbox">
    <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
      <%= render @chat_room.messages %>
    </div>
  </div>
  <div class="chatinput">
    <%= form_for @message, url: '#', id: 'formSubmit' do |f| %>
      <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
      <div class="form-group input-container row">
        <div class="col s12">
          <%= f.text_field :body, class: 'form-control', placeholder: 'Type your message...' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
